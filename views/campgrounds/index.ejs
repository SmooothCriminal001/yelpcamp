<% layout('layouts/boilerplate')%>
<h1>All Campgrounds</h1>
<p>
    <a href="/campgrounds/new">New Campground</a>
</p>
<p>
    <%  for(const eachCampground of campgrounds) { %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img crossorigin="anonymous" src="<%= eachCampground.images[0].url %>" class="img-fluid" />
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= eachCampground.title %>
                        </h5>
                        <p class="card-text">
                            <%= eachCampground.description %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted"><%= eachCampground.location %></small>
                        </p>
                        <a class="btn btn-primary" href="/campgrounds/<%= eachCampground._id %>">
                            View <%= eachCampground.title %>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    <% } %>
</p>
